pipeline {
   agent any
   stages {
      stage('Clone Git Repo') {
         steps {
            git 'https://github.com/fspin-k8s/fspin-infrastructure.git'
         }
      }
      stage ('Launch Compose') {
         parallel {
            stage('F28 cinnamon') {
               steps {
                  sh 'kubectl delete --ignore-not-found -f jobs/run-f28-cinnamon.yaml'
                  sh 'kubectl create -f jobs/run-f28-cinnamon.yaml'
                  sh 'until kubectl get job fspin-f28-cinnamon && kubectl get job fspin-f28-cinnamon -o json|jq -e \'.status|.conditions|all\'; do sleep 60; done'
               }
            }
            stage('F28 kde') {
               steps {
                  sh 'kubectl delete --ignore-not-found -f jobs/run-f28-kde.yaml'
                  sh 'kubectl create -f jobs/run-f28-kde.yaml'
                  sh 'until kubectl get job fspin-f28-kde && kubectl get job fspin-f28-kde -o json|jq -e \'.status|.conditions|all\'; do sleep 60; done'
               }
            }
            stage('F28 lxde') {
               steps {
                  sh 'kubectl delete --ignore-not-found -f jobs/run-f28-lxde.yaml'
                  sh 'kubectl create -f jobs/run-f28-lxde.yaml'
                  sh 'until kubectl get job fspin-f28-lxde && kubectl get job fspin-f28-lxde -o json|jq -e \'.status|.conditions|all\'; do sleep 60; done'
               }
            }
            stage('F28 lxqt') {
               steps {
                  sh 'kubectl delete --ignore-not-found -f jobs/run-f28-lxqt.yaml'
                  sh 'kubectl create -f jobs/run-f28-lxqt.yaml'
                  sh 'until kubectl get job fspin-f28-lxqt && kubectl get job fspin-f28-lxqt -o json|jq -e \'.status|.conditions|all\'; do sleep 60; done'
               }
            }
            stage('F28 mate-compiz') {
               steps {
                  sh 'kubectl delete --ignore-not-found -f jobs/run-f28-mate-compiz.yaml'
                  sh 'kubectl create -f jobs/run-f28-mate-compiz.yaml'
                  sh 'until kubectl get job fspin-f28-mate-compiz && kubectl get job fspin-f28-mate-compiz -o json|jq -e \'.status|.conditions|all\'; do sleep 60; done'
               }
            }
            stage('F28 soas') {
               steps {
                  sh 'kubectl delete --ignore-not-found -f jobs/run-f28-soas.yaml'
                  sh 'kubectl create -f jobs/run-f28-soas.yaml'
                  sh 'until kubectl get job fspin-f28-soas && kubectl get job fspin-f28-soas -o json|jq -e \'.status|.conditions|all\'; do sleep 60; done'
               }
            }
            stage('F28 source') {
               steps {
                  sh 'kubectl delete --ignore-not-found -f jobs/run-f28-source.yaml'
                  sh 'kubectl create -f jobs/run-f28-source.yaml'
                  sh 'until kubectl get job fspin-f28-source && kubectl get job fspin-f28-source -o json|jq -e \'.status|.conditions|all\'; do sleep 60; done'
               }
            }
            stage('F28 workstation') {
               steps {
                  sh 'kubectl delete --ignore-not-found -f jobs/run-f28-workstation.yaml'
                  sh 'kubectl create -f jobs/run-f28-workstation.yaml'
                  sh 'until kubectl get job fspin-f28-workstation && kubectl get job fspin-f28-workstation -o json|jq -e \'.status|.conditions|all\'; do sleep 60; done'
               }
            }
            stage('F28 xfce') {
               steps {
                  sh 'kubectl delete --ignore-not-found -f jobs/run-f28-xfce.yaml'
                  sh 'kubectl create -f jobs/run-f28-xfce.yaml'
                  sh 'until kubectl get job fspin-f28-xfce && kubectl get job fspin-f28-xfce -o json|jq -e \'.status|.conditions|all\'; do sleep 60; done'
               }
            }
         }
      }
      stage('Cleanup') {
         steps {
            sh 'kubectl delete --ignore-not-found job.batch/fspin-28-pungi'
            sh 'kubectl delete --ignore-not-found job.batch/fspin-f28-cinnamon'
            sh 'kubectl delete --ignore-not-found job.batch/fspin-f28-kde'
            sh 'kubectl delete --ignore-not-found job.batch/fspin-f28-lxde'
            sh 'kubectl delete --ignore-not-found job.batch/fspin-f28-lxqt'
            sh 'kubectl delete --ignore-not-found job.batch/fspin-f28-mate-compiz'
            sh 'kubectl delete --ignore-not-found job.batch/fspin-f28-soas'
            sh 'kubectl delete --ignore-not-found job.batch/fspin-f28-workstation'
            sh 'kubectl delete --ignore-not-found job.batch/fspin-f28-xfce'
         }
      }
   }
}
