#!/bin/bash
# Compose from upstream Fedora 27 x86_64 ${SPIN_NAME}
source /tmp/snapshot_id
export SPIN_SHORT_NAME=`echo $SPIN_NAME|cut -c1-4|awk '{print toupper($0)}'`
pushd /usr/share/spin-kickstarts
cp /tmp/fspin-snapshot-repo-not-rawhide-with-source.ks fedora-repo-not-rawhide.ks
mv fedora-live-mate_compiz.ks fedora-live-mate-compiz.ks
ksflatten --config fedora-live-${SPIN_NAME}.ks -o flat-fedora-live-${SPIN_NAME}.ks --version F27
livemedia-creator --ks flat-fedora-live-${SPIN_NAME}.ks --no-virt --resultdir /var/lmc --project F27-${SPIN_SHORT_NAME}-x86_64-${SPIN_ID}-Live --make-iso --volid F27-${SPIN_SHORT_NAME}-x86_64-${SPIN_ID}-Live --iso-only --iso-name F27-${SPIN_SHORT_NAME}-x86_64-${SPIN_ID}-Live.iso --releasever 27 --title F27-${SPIN_SHORT_NAME}-x86_64-${SPIN_ID}-Live --macboot
popd
