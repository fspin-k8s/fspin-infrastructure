#!/bin/bash
# Import upstream cloud base images into GCE for custom image family
set -x
IMPORT_TIME=$(date --utc +%s)
ZONE='us-west2-a'
PROJECT='fspin-265404'
FEDORA_VERSION=34

gcloud config set project ${PROJECT}
gcloud config set compute/zone ${ZONE}
pushd /tmp

echo "Importing F${FEDORA_VERSION}..." && \
# download upstream raw image
wget https://download.fedoraproject.org/pub/fedora/linux/releases/${FEDORA_VERSION}/Cloud/x86_64/images/Fedora-Cloud-Base-${FEDORA_VERSION}-1.2.x86_64.raw.xz && \
unxz Fedora-Cloud-Base-${FEDORA_VERSION}-1.2.x86_64.raw.xz && \

# install import
sudo gcloud components install beta && \

# run f${FEDORA_VERSION} import from upstream raw disk
gcloud --quiet beta compute images import fspin-${FEDORA_VERSION}-1-2-x86-64-${IMPORT_TIME} \
    --source-file Fedora-Cloud-Base-${FEDORA_VERSION}-1.2.x86_64.raw \
    --os centos-8 && \
gcloud compute images create fspin-${FEDORA_VERSION}-${IMPORT_TIME}-bootfix \
    --source-image fspin-${FEDORA_VERSION}-1-2-x86-64-${IMPORT_TIME} \
    --source-image-project ${PROJECT} && \

# boot image, wait for selinux fixup, shutdown
gcloud compute instances create fspin-${FEDORA_VERSION}-${IMPORT_TIME}-bootfix \
    --image fspin-${FEDORA_VERSION}-${IMPORT_TIME}-bootfix \
    --image-project ${PROJECT} \
    --zone ${ZONE} \
    --boot-disk-size 30GB \
    --boot-disk-type pd-ssd \
    --machine-type n1-standard-8 && \
sleep 120 && \
gcloud compute instances stop fspin-${FEDORA_VERSION}-${IMPORT_TIME}-bootfix && \

# import resulting image
gcloud compute images create fspin-${FEDORA_VERSION}-${IMPORT_TIME} \
    --source-disk fspin-${FEDORA_VERSION}-${IMPORT_TIME}-bootfix \
    --source-disk-zone ${ZONE} \
    --family fspin-${FEDORA_VERSION} && \

# remove instance
gcloud -q compute instances delete fspin-${FEDORA_VERSION}-${IMPORT_TIME}-bootfix --zone ${ZONE} --delete-disks all
